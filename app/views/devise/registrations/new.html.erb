<div class="shadow-lg p-8 bg-white border rounded-md max-w-md mx-auto mt-5">
  <h1 class="font-bold text-3xl text-center mb-3 text-gray-800">Sign Up</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class="mb-2">
      <%= f.label :is_admin, "Register as:" %>
      <%= f.radio_button :is_admin, false %> Trader
      <%= f.radio_button :is_admin, true, checked: true %> Admin
    </div>

    <div class="mb-2">
      <%= f.label :name, class: 'block font-semibold text-gray-700' %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500' %>
    </div>

    <div class="mb-2">
      <%= f.label :email, class: 'block font-semibold text-gray-700' %>
      <%= f.email_field :email, autocomplete: "email", class: 'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500' %>
    </div>

    <div class="mb-2">
      <%= f.label :password, class: 'block mb-2 font-bold' %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500' %>
    </div>

    <div class="mb-2">
      <%= f.label :password_confirmation, class: 'block mb-2 font-bold' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500' %>
    </div>

    <div class="mb-4">
      <%= f.submit "Sign up", class: 'w-full py-2 bg-indigo-600 text-white font-semibold rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
