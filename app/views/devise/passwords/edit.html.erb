<div class="shadow-lg p-8 bg-white border rounded-md max-w-md mx-auto mt-20">
  <h2 class="font-bold text-3xl text-center mb-4 text-gray-800">Change your password</h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="mb-4">
      <%= f.label :password, "New password", class: 'block font-semibold text-gray-700' %><br />
      <% if @minimum_password_length %>
        <em class="text-sm text-gray-500">(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500' %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, "Confirm new password", class: 'block font-semibold text-gray-700' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500' %>
    </div>

    <div class="mb-6">
      <%= f.submit "Change my password", class: 'w-full py-2 bg-indigo-600 text-white font-semibold rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
