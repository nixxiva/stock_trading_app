<div class="shadow-lg p-8 bg-white border rounded-md max-w-md mx-auto mt-20">
  <h1 class="font-bold text-3xl text-center mb-4 text-gray-800">Log in</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    
    <div class="mb-4">
      <%= f.label :email, class: 'block font-semibold text-gray-700' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500' %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: 'block font-semibold text-gray-700' %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4 flex items-center">
        <%= f.check_box :remember_me, class: 'form-checkbox text-indigo-600' %>
        <%= f.label :remember_me, class: 'ml-2 text-gray-700' %>
      </div>
    <% end %>

    <div class="mb-6">
      <%= f.submit "Log in", class: 'w-full py-2 bg-indigo-600 text-white font-semibold rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500' %>
    </div>
    
  <% end %>

  <%= render "devise/shared/links" %>

</div>
