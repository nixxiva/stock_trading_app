<div class= "shadow p-6 bg-gray-100 border rounded-md max-w-md mx-auto">
<h1 class= "font-bold text-3xl text-center mx-auto mb-2">Log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="mb-2">
    <%= f.label :email, class: 'block font-bold' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'border-gray-300' %>
  </div>

  <div class="mb-2">
    <%= f.label :password, class: 'block font-bold' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'border-gray-300' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-2">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>