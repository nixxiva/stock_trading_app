<%= form_with model: [:admin, @user] do |form| %>

<div class="max-w-md mx-auto p-6 bg-gray-100 shadow-md border rounded-md mt-8">
  <h1 class="text-2xl font-semibold text-center mb-6">
    <%= @user.new_record? ? "Create User" : "Edit User" %>
  </h1>

  <div class="mb-4">
    <%= form.label :name, class: "block text-gray-700 font-medium" %>
    <%= form.text_field :name, value: @user.name, class: "w-full p-2 border border-gray-300 rounded-md" %>
    <% @user.errors.full_messages_for(:name).each do |message| %>
      <div class="text-red-600 text-sm"><%= message %></div>
    <% end %>
  </div>

  <div class="mb-4">
    <%= form.label :email, class: "block text-gray-700 font-medium" %>
    <%= form.text_field :email, value: @user.email, class: "w-full p-2 border border-gray-300 rounded-md" %>
    <% @user.errors.full_messages_for(:email).each do |message| %>
      <div class="text-red-600 text-sm"><%= message %></div>
    <% end %>
  </div>

  <div class="mb-4">
    <%= form.label :password, class: "block text-gray-700 font-medium" %>
    <%= form.password_field :password, class: "w-full p-2 border border-gray-300 rounded-md" %>
    <% @user.errors.full_messages_for(:password).each do |message| %>
      <div class="text-red-600 text-sm"><%= message %></div>
    <% end %>
  </div>

  <div class="mt-6">
    <%= form.submit @user.new_record? ? "Create User" : "Update User", class: "w-full py-2 bg-blue-600 text-white font-semibold rounded-md hover:bg-blue-700 transition" %>
  </div>

</div>

<% end %>
