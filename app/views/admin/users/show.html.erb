<div class="max-w-md mx-auto p-4 sm:p-6 border border-gray-300 rounded-lg bg-gray-50 mt-8">
  <h1 class="text-2xl sm:text-3xl text-center text-gray-800 mb-4">User Information</h1>

  <div class="pb-4 mb-4 sm:mb-6 border-b border-gray-300 px-4">
    <h2 class="text-lg sm:text-xl text-gray-600">Name:</h2>
    <p class="text-base sm:text-lg text-gray-700"><%= @user.name %></p>
  </div>

  <div class="pb-4 mb-4 sm:mb-6 border-b border-gray-300 px-4">
    <h2 class="text-lg sm:text-xl text-gray-600">Email:</h2>
    <p class="text-base sm:text-lg text-gray-700"><%= @user.email %></p>
  </div>

  <div class="pb-4 px-4">
    <h2 class="text-lg sm:text-xl text-gray-600">Created At:</h2>
    <p class="text-base sm:text-lg text-gray-700"><%= @user.created_at.strftime('%B %d, %Y at %I:%M %p') %></p>
  </div>
</div>
